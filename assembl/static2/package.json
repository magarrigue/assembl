  "//": "See https://facebook.github.io/jest/docs/webpack.html for more info",
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "identity-obj-proxy",
      "jquery": "<rootDir>/node_modules/jquery/dist/jquery.slim.min.js",
      "annotator_range": "<rootDir>/node_modules/hypothesis/src/annotator/anchoring/range.coffee",
      "rc-slider": "<rootDir>/node_modules/searchkit/node_modules/rc-slider/lib/index.js"
    },
    "moduleFileExtensions": [
      "coffee",
      "gql",
      "graphql",
      "js",
      "json",
      "jsx"
    ],
    "transformIgnorePatterns": [
      "/node_modules/[^h][^y][^p]"
    ],
    "transform": {
      "\\.(gql|graphql)$": "jest-transform-graphql",
      "\\.coffee$": "jest-coffee-preprocessor",
      "\\.(js|jsx)$": "babel-jest"
    },
    "setupFiles": [
      "<rootDir>/tests/setupTests.js"
    ],
    "globals": {
      "globalAnalytics": {}
    }
